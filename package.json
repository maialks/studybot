{
  "name": "studybot",
  "version": "1.0.0",
  "main": "main.ts",
  "scripts": {
    "test:db:start": "docker run -d --rm --name studybot-test -p 27027:27017 mongo",
    "test:db:stop": "docker stop studybot-test",
    "dev": "NODE_ENV=dev tsx --trace-warnings ./src/main.ts",
    "deploy_cmd_global": "tsx ./src/deployCommands.ts global",
    "deploy_cmd_guild": "tsx ./src/deployCommands.ts guild",
    "test": "npm run test:db:start && NODE_ENV=test tsx --test --test-concurrency=1 && npm run test:db:stop",
    "test:only": "npm run test:db:start && NODE_ENV=test tsx --test --test-concurrency=1 --test-only && npm run test:db:stop"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/express": "^5.0.3",
    "axios": "^1.7.7",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "discord-interactions": "^4.3.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^22.18.11",
    "eslint": "^9.33.0",
    "eslint-plugin-node": "^11.1.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
