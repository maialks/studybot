{
  "name": "studybot",
  "version": "2.1.0",
  "main": "main.ts",
  "type": "module",
  "description": "",
  "scripts": {
    "eslint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "_development---": "",
    "dev": "NODE_ENV=dev tsx --trace-warnings ./src/main.ts",
    "start": "pm2 start ecosystem.config.cjs",
    "_build / deploy---": "",
    "build": "swc src -d dist --strip-leading-paths",
    "deploy_cmd_global": "tsx ./src/deployCommands.ts global",
    "deploy_cmd_guild": "tsx ./src/deployCommands.ts guild",
    "_tests---": "",
    "test:db:start": "docker run -d --rm --name studybot-test -p 27027:27017 mongo",
    "test:db:stop": "docker stop studybot-test",
    "test": "npm run test:db:start && NODE_ENV=test tsx --test \"src/tests/**/*.test.ts\" --test-concurrency=1 && npm run test:db:stop",
    "test:ci": "NODE_ENV=test tsx --test \"src/tests/**/*.test.ts\" --test-concurrency=1",
    "test:only": "npm run test:db:start && NODE_ENV=test tsx --test \"src/tests/**/*.test.ts\" --test-concurrency=1 --test-only && npm run test:db:stop"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "axios": "^1.7.7",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "discord-interactions": "^4.3.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "mongoose": "^8.7.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@types/node": "^22.18.11",
    "eslint": "^9.33.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0"
  }
}
